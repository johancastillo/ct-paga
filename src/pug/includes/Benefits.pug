section#features.section.features-area.style-two.overflow-hidden.py-5
    div.container
        div.row.justify-content-center
            div.col-12.col-md-10.col-lg-8
                //- Section Heading
                div.section-heading.text-center
                    span.d-inline-block.rounded-pill.shadow-sm.fw-5.px-4.py-2.mb-3
                        i.far.fa-lightbulb.text-primary.mr-1
                        span.text-primary Beneficios
                        span(style={"margin-left": '8px'}) de Tarjeta Efectivo
                    
                    h2.title-h1= benfitsTitle
                    
                    p.mt-4= benefitsDescription

        div.row
            .col-md-6
                //- Benefits List Start
                each benefit in benefits.column1
                    +benefitCard(benefit.icon, benefit.title, benefit.description, benefit.spaces)
                //- Benefits List End
            .col-md-6
                //- Benefits List Start
                each benefit in benefits.column2
                    +benefitCard(benefit.icon, benefit.title, benefit.description, benefit.spaces)
                //- Benefits List End