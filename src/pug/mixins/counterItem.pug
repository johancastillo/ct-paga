mixin counterItem(plus, number, unit, text)
    .col-5.col-sm-3.single-counter.text-center
        .counter-inner.p-3.p-md-0
            //-  Counter Item
            .counter-item.d-inline-block.mb-3
                if plus
                    span.fw-7 +
                
                span.counter.fw-7= number
                
                if unit
                    span.fw-7= unit

            h5= text